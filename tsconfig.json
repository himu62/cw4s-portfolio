{
	"compilerOptions": {
		"module": "es6",
		"target": "es5",
		"sourceMap": true,
		"jsx": "react",
		"alwaysStrict": true,
		"noImplicitAny": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"compileOnSave": false,
	"filesGlob": [
		"scripts/*",
		"scripts/**/*"
	],
	"include": [
		"scripts",
		"node_modules/@types"
	],
	"exclude": [
		"node_modules"
	]
}
